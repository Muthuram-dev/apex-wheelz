<!DOCTYPE html>
<html>
<head>
  <title>Orders</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
  <h2>All Orders</h2>
  <a href="/" class="btn btn-success mb-3">Add New Order</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th><th>Product</th><th>Description</th><th>Customer</th><th>Email</th><th>Phone</th><th>Date</th><th>Status</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(o => { %>
        <tr>
          <td><%= o.id %></td>
          <td><%= o.product_name %></td>
          <td><%= o.product_desc %></td>
          <td><%= o.customer_name %></td>
          <td><%= o.customer_email %></td>
          <td><%= o.customer_phone %></td>
          <td><%= o.order_date %></td>
          <td><%= o.status %></td>
          <td>
            <a href="/edit/<%= o.id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/delete/<%= o.id %>" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
